@model Domain.DTO.ExamineEmployeeDTO

<h1>Examine Employee @Model.Employee.FullName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ExamineEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PolyclinicId" class="control-label"></label>
                @Html.DropDownListFor(x => Model.PolyclinicId, new SelectList(Model.Polyclinics, "Id", "PolyclinicName"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <input asp-for="EmployeeId" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>